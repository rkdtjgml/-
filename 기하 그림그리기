from turtle import*
home()
pos()
for steps in range(100):
  speed(10)
  forward(100)
  left(120)
  forward(100)
  left(120)
  forward(100)
  for c in ('blue','red','green'):
    color(c)
    forward(steps)
    right(30)
    color('red')
    fillcolor('yellow')
    begin_fill()
clearscreen()

while True:
  color('blue')
  forward(200)
  left(170)
  if abs(pos())<1:
    break
   
  end_fill()